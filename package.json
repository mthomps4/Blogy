{
  "name": "bloggy-blog",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "start": "next start",
    "build": "next build",
    "build:prisma": "prisma generate",
    "db:migrate": "npm run withEnv:dev prisma migrate dev",
    "db:setup": "npm run withEnv:dev prisma migrate reset",
    "db:reset": "npm run withEnv:dev prisma migrate reset",
    "db:reset:test": "npm run withEnv:test prisma migrate reset --skip-seed",
    "db:deploy": "prisma migrate deploy",
    "db:seed": "npm run withEnv:dev prisma db seed",
    "lint": "eslint . --ext .ts,.tsx --ignore-pattern tmp",
    "lint:fix": "npm run lint -- --fix",
    "test": "npm run withEnv:test jest --runInBand",
    "test:ci": "jest --runInBand --ci",
    "test:setup": "npm run db:reset:test",
    "test:e2e:debug": "PWDEBUG=1 npm run test:e2e",
    "test:e2e": "npm run withEnv:test -- playwright test --workers 1",
    "test:cov": "npm run withEnv:test jest --runInBand --coverage",
    "typecheck": "tsc --noEmit",
    "withEnv": "dotenv -c --",
    "withEnv:dev": "dotenv -c development --",
    "withEnv:test": "dotenv -c test --",
    "prepare": "husky install"
  },
  "dependencies": {
    "@hookform/resolvers": "^3.3.2",
    "@prisma/client": "^5.5.2",
    "@radix-ui/react-slot": "^1.0.2",
    "@radix-ui/react-toast": "^1.1.5",
    "@tailwindcss/forms": "^0.5.6",
    "@tailwindcss/typography": "^0.5.10",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.0.0",
    "lucide-react": "^0.292.0",
    "next": "14.0.2",
    "react": "^18",
    "react-dom": "^18",
    "react-hook-form": "^7.48.2",
    "tailwind-merge": "^2.0.0",
    "tailwindcss-animate": "^1.0.7",
    "zod": "^3.22.4"
  },
  "prisma": {
    "seed": "ts-node --compiler-options {\"module\":\"CommonJS\"} prisma/seeds.ts"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.1",
    "@testing-library/jest-dom": "^6.1.4",
    "@testing-library/react": "^14.1.0",
    "@types/chance": "^1.1.6",
    "@types/jest": "^29.5.8",
    "@types/node": "^20",
    "@types/pg": "^8.10.9",
    "@types/pg-format": "^1.0.5",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@types/text-encoding": "^0.0.39",
    "@typescript-eslint/eslint-plugin": "^6.10.0",
    "autoprefixer": "^10.0.1",
    "chance": "^1.1.11",
    "dotenv-cli": "^7.3.0",
    "eslint": "^8.53.0",
    "eslint-config-next": "14.0.2",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^15.1.0",
    "pg": "^8.11.3",
    "pg-format": "^1.0.4",
    "postcss": "^8",
    "prettier": "^3.0.3",
    "prisma": "^5.5.2",
    "tailwindcss": "^3.3.0",
    "text-encoding": "^0.7.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "ts-postgres": "^1.8.0",
    "typescript": "^5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": "npm run lint"
  }
}
